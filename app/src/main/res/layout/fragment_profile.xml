<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Settings" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="username"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/imgProfile"
        app:layout_constraintStart_toStartOf="@+id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile" />


    <LinearLayout
        android:id="@+id/layoutPosts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gridPosts"
        app:layout_constraintEnd_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toBottomOf="@id/txtUsername"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/txtPostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txPostLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:fontFamily="@font/poppins"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGuesses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gridPosts"
        app:layout_constraintStart_toEndOf="@id/layoutPosts"
        app:layout_constraintTop_toBottomOf="@id/txtUsername">

        <TextView
            android:id="@+id/txtGuessCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="84"
            android:fontFamily="@font/poppins"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtGuessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guesses"
            android:fontFamily="@font/poppins"
            android:textSize="16dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gridPosts"
        android:layout_width="0dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/layoutGuesses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>